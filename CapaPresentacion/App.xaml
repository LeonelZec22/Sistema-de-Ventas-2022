            <ControlTemplate x:Key="ComboBoxTemplate" TargetType="{x:Type ComboBox}">
                <Grid x:Name="templateRoot" SnapsToDevicePixels="true" Height="40" Width="137">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
